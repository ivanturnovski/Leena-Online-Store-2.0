<div class="container py-4">
	<div class="row">
		<h2 class="text-center my-3">
			{{ section.settings.title }}
		</h2>
	</div>
	<div id="{{ section.id }}"
		class="row {% if section.settings.slideshow == false %}row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5{% endif %}">
		{%- for block in section.blocks -%}
		{%- assign item = block.settings -%}
		{%- assign featured_product = all_products[item.product] -%}
		{%- assign featured_product_img = featured_product.featured_media.preview_image -%}
		<div class="col p-3">
			{%- comment -%}
			{%- if section.settings.show_cart_button == true -%}
			{%- render 'product-card-with-button', product: featured_product, image: featured_product_img -%}
			{%- else -%}
			{%- render 'product-card', product: featured_product, image: featured_product_img -%}
			{%- endif -%}
			{%- endcomment -%}
			{%- render 'product-card', product: featured_product, image: featured_product_img -%}
		</div>
		{%- endfor -%}
	</div>
</div>

{%- if section.settings.slideshow == true -%}
<script>
	$(document).ready(function () {
		$('#{{ section.id }}').slick({
			infinite: true,
			slidesToShow: 5,
			slidesToScroll: 3,
			autoplay: true,
			autoplaySpeed: 3000,
			responsive: [
				{
					breakpoint: 992,
					settings: {
						slidesToShow: 3,
						slidesToScroll: 1,
						autoplay: true,
						autoplaySpeed: 3000,
					}
				},
				{
					breakpoint: 768,
					settings: {
						arrows: false,
						autoplay: true,
						autoplaySpeed: 3000,
						slidesToShow: 2,
						slidesToScroll: 1
					}
				},
				{
					breakpoint: 576,
					settings: {
						arrows: false,
						autoplay: true,
						autoplaySpeed: 3000,
						slidesToShow: 1,
						slidesToScroll: 1
					}
				}
			]
		});
	})
</script>
{%- endif -%}



{% schema %}
{
"name": "Featured Products",
"tag": "section",
"class": "featured-products-section",
"settings": [
{
"type": "text",
"id": "title",
"label": "Section Title"
},
{
"type": "checkbox",
"id": "show_cart_button",
"label": "Show Add To Cart Button"
},
{
"type": "checkbox",
"id": "slideshow",
"label": "Make Slideshow",
"default": false
}
],
"blocks": [
{
"name": "Featured Product",
"type": "product",
"settings": [
{
"type": "product",
"id": "product",
"label": "Product"
}
]
}
],
"presets": [
{
"category": "Slideshow",
"name": "Featured products"
}
]
}
{% endschema %}