<div class="container">
	<div class="row">
		<h3 class="text-center my-3">{{ page.title }}</h3>
		<div class="accordion accordion-flush" id="accordionFAQ">
			{%- for block in section.blocks -%}
			<div class="accordion-item">
				<h2 class="accordion-header" id="collapse-header-{{ block.id }}">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
						data-bs-target="#collapse-{{ block.id }}" aria-expanded="false"
						aria-controls="{{ block.id }}">{{ block.settings.title }}</button>
				</h2>
				<div class="accordion-collapse collapse" id="collapse-{{ block.id }}"
					aria-labelledby="collapse-header-{{ block.id }}" data-bs-parent="#accordionFAQ">
					<div class="accordion-body p-3">{{ block.settings.answer | strip_html }}</div>
				</div>
			</div>
			{%- endfor -%}
		</div>
	</div>
</div>

{% schema %}
{
"name": "FAQs",
"blocks": [ {
"name": "FAQ Items",
"type": "faq",
"limit": 5,
"settings": [
{
"type": "text",
"id": "title",
"label": "Title",
"default": "FAQ Title Exampe"
},
{
"type": "richtext",
"id": "answer",
"label": "Answer"
}
]
}
]
}
{% endschema %}