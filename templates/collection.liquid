{% paginate collection.products by 3 %}
<div class="container">
  <div class="row my-5">
    <h1 class="text-center">{% if collection.handle == 'all' %}ALL {% endif %}{{ collection.title }}</h1>
  </div>

  <div class="row justify-content-center">
    <select name="sorting" id="sort_by" class="form-select form-select-sm w-25">
      {% for option in collection.sort_options %}
      {% capture selected %}{% if option.value == collection.sort_by %}selected{% endif %}{% endcapture %}
      <option value="{{ option.value }}" {{selected}}>{{ option.name }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="row justify-content-center my-5">
    {% for product in collection.products %}
    {% assign image = product.featured_media.preview_image %}
    <div class="col-3 g-2">
      <div class="card">
        <div class="thumbnails m-3">
          {% if image != blank %}
          <img class="card-img-top" src="{{ image | img_url: '150x' }}" alt="{{ product.title }}">
          {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
          {% endif %}
        </div>
        <div class="card-body">
          <h5><a href="{{ product.url }}">{{ product.title }}</a></h5>
          <p class="price">{{ product.price | money }}</p>
        </div>
      </div>
    </div>
    {% else %}
    <p>no matches</p>
    {% endfor %}
  </div>
</div>
{% render 'pagination' , paginate: paginate %}
{% endpaginate %}