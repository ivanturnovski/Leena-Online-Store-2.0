<!-- /templates/customers/addresses.liquid -->
<div class="container my-5">
	<h1 class="lead">
		My Addresses
	</h1>
	<button class="btn btn-primary rounded-0" data-bs-toggle="modal" data-bs-target="#newAddressModal">Create New
		Address</button>
	<div class="row row-cols-md-4 row-cols-1 my-5 gx-2">
		{% for address in customer.addresses %}
		<div class="col">
			<div class="card">
				<div class="card-body">
					{{ address | format_address }}
				</div>
				<div class="card-footer w-100">
					<form action="/account/addresses/{{ address.id }}" method="post"
						data-confirm-message="Delete Address">
						<input type="hidden" name="_method" value="delete">
						<button class="btn btn-danger">Delete</button>
					</form>

				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>


<div id="newAddressModal" class="modal fade" tabindex="-1" aria-labelledby="newAddressModalLabel" aria-hidden="true">
	{% form 'customer_address', customer.new_address %}
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 id="newAddressModalLabel" class="modal-title">Add New Address</h5>
				<button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="col-12 mb-3">
					<label for="AddressFirstNameNew" class="form-label">First Name</label>
					<input id="AddressFirstNameNew" class="form-control" type="text" name="address[first_name]"
						value="{{ form.first_name }}">
				</div>
				<div class="col-12 mb-3">
					<label for="AddressLastNameNew" class="form-label">Last Name</label>
					<input id="AddressLastNameNew" class="form-control" type="text" name="address[last_name]"
						value="{{ form.last_name }}">
				</div>
				<div class="col-12 mb-3">
					<label for="AddressCompanyNew" class="form-label">Company</label>
					<input id="AddressCompanyNew" class="form-control" type="text" name="address[company]"
						value="{{ form.company }}">
				</div>
				<div class="col-12 mb-3">
					<label for="AddressAddress1New" class="form-label">Address</label>
					<input id="AddressAddress1New" class="form-control" type="text" name="address[address1]"
						value="{{ form.address1 }}">
				</div>
				<div class="col-12 mb-3">
					<label for="AddressAddress2New" class="form-label">Apartment, Suite...</label>
					<input id="AddressAddress2New" class="form-control" type="text" name="address[address2]"
						value="{{ form.address2 }}">
				</div>
				<div class="row">
					<div class="col-12 col-md-4 mb-3">
						<label for="AddressCityNew" class="form-label">City</label>
						<input id="AddressCityNew" class="form-control" type="text" name="address[city]"
							value="{{ form.city }}">
					</div>
					<div class="col-12 col-md-4 mb-3">
						<label for="AddressCountryNew" class="form-label">Country</label>
						<select id="AddressCountryNew" class="form-control" name="address[country]">{{
							all_country_option_tags }}</select>
					</div>
					<div class="col-12 col-md-4 mb-3">
						<label for="AddressProvinceNew" class="form-label">Province</label>
						<select id="AddressProvinceNew" class="form-control" name="address[province]"
							disabled="disabled"></select>
					</div>
				</div>
				<div class="col-12 mb-3">
					<label for="AddressZipNew" class="form-label">ZIP</label>
					<input id="AddressZipNew" class="form-control" type="text" name="address[zip]"
						value="{{ form.zip }}">
				</div>
				<div class="col-12 mb-3">
					<label for="AddressPhoneNew" class="form-label">Phone</label>
					<input id="AddressPhoneNew" class="form-control" type="text" name="address[phone]"
						value="{{ form.phone }}">
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-primary">Create Address</button>
			</div>
		</div>
	</div>
	{% endform %}
</div>