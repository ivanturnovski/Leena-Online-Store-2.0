<!-- /templates/customers/login.liquid -->
<div class="container">
	<div class="row">
		<h2 class="text-center py-3">Login</h2>
		<div class="login-form">
			{% form 'customer_login' %}
			{% render 'form-error', form: form %}

			<label for="customer_email">Email Address</label>
			<input type="email" name="customer[email]" class="form-control rounded-0 my-2" />

			<label for="customer_password">Password</label>
			<input type="password" name="customer[password]" class="form-control rounded-0 my-2" />

			<input type="submit" value="Sign In" class="btn btn-primary btn-lg w-100 rounded-0" />
			{% endform %}

			<a href="#recover" id="forgotPassword" class="text-center d-block">Forgot your password?</a>
		</div>
	</div>
	<div class="row">
		<div id="forgotPasswordForm" class="forgot-password-form my-5">
			{% form 'recover_customer_password' %}
			{% include 'form-error', form: form %}
			<div class="col-12">
				<label for="resetPassword">Email Address</label>
				<input class="form-control my-2 rounded-0" type="email" name="email" id="resetPassword">
			</div>

			<input type="submit" value="Reset Password" class="btn btn-secondary btn-lg w-100 rounded-0">
			{% endform %}
		</div>
	</div>

</div>